<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:icon">@drawable/logo8</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/exo2medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/background_dark</item>
    </style>

    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullScreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="FullScreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">#18A01D</item>
        <item name="colorControlNormal">#18A01D</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#92E792</item>
    </style>


</resources>
