<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="#C2E8C7">



        <LinearLayout
            android:id="@+id/addressContainer"
            android:layout_width="match_parent"
            android:layout_height="289dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Profile"
                android:textSize="45dp" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />


            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:src="@drawable/default_profile"
                android:layout_gravity="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:text="JOHN V."
                android:textSize="20sp" />

        </LinearLayout>





    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-38dp"
        app:srcCompat="@drawable/rectangle_1" />

    <LinearLayout
        android:layout_width="351dp"
        android:layout_height="364dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/accInfoImage"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                app:srcCompat="@drawable/image_1" />

            <TextView
                android:id="@+id/accInfoText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                android:text="ACCOUNT INFORMATION" />

            <ImageButton
                android:id="@+id/accInfoArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/group_2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/faqImage"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                app:srcCompat="@drawable/image_2" />

            <TextView
                android:id="@+id/faqText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                android:text="FAQs" />

            <ImageButton
                android:id="@+id/faqArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/group_2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/settingImage"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                app:srcCompat="@drawable/image_3" />

            <TextView
                android:id="@+id/settingText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                android:text="SETTINGS" />

            <ImageButton
                android:id="@+id/settingArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/group_2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal"
            android:textAlignment="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/signOutImage"
                android:layout_width="5dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                app:srcCompat="@drawable/image_4" />

            <TextView
                android:id="@+id/signOutText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10px"
                android:text="SIGN OUT" />

            <ImageButton
                android:id="@+id/signOutArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#FFFFFF"
                app:srcCompat="@drawable/group_2" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>