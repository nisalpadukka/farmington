<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarketplaceActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C2E8C7"
        android:orientation="vertical">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            >

            <Button
                android:id="@+id/newlisting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#09876d"
                android:text="Create new listing"
                android:textAlignment="center" />
        </RelativeLayout>

        <ScrollView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            >
            <GridLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:rowCount="3"
                android:columnCount="2"
                android:rowOrderPreserved="true"

                android:columnOrderPreserved="true"
                android:alignmentMode="alignMargins">

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >

                    <LinearLayout
                        android:id="@+id/wheatbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E6F5E6"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/wheatimage"
                            android:layout_margin="10dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/wheat"
                            android:src="@drawable/wheat" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="WHEAT"
                            android:textColor="#033505"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--// 2nd TIME-->
                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/ricepic"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ricepic"
                            android:layout_margin="10dp"
                            android:src="@drawable/ricepic" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RICE"
                            android:textStyle="bold"
                            android:textColor="#033505"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--//3rd time-->

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/cornpicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/images"
                            android:src="@drawable/images" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CORN"
                            android:textColor="#033505"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--//4th time-->

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/barleypicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/barley"
                            android:src="@drawable/barley" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BARLEY"
                            android:textColor="#033505"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--//5th TIME-->

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/oatspicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/oats"
                            android:layout_margin="10dp"
                            android:src="@drawable/oats" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OATS"
                            android:textColor="#033505"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--//6th TIME-->

                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/soybeanpicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/soybean"
                            android:src="@drawable/soybean" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SOYBEAN"
                            android:textStyle="bold"
                            android:textColor="#033505"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--            7th time-->
                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/chickpeapicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/prducts"
                            android:src="@drawable/prducts" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHICKPEA"
                            android:textColor="#033505"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--            8th time-->
                <androidx.cardview.widget.CardView
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    >
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#E6F5E6">

                        <ImageButton
                            android:id="@+id/mustardpicture"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:background="@drawable/mustard"
                            android:src="@drawable/mustard" />
                        <TextView android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MUSTARD"
                            android:textStyle="bold"
                            android:textColor="#033505"
                            android:layout_gravity="center"
                            />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>

        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/teal_700"
            app:itemIconTint="@drawable/selector"
            app:itemTextColor="@drawable/selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:menu="@menu/menu_navigation" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
